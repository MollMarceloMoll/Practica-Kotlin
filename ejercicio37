import java.util.*    // required import

fun dias() : String {
    val a = arrayOf("Lunes","Martes","Miercoles","Jueves","Viernes","Sabado","Domingo")
    val b = a[Random().nextInt(a.size)]
    return b
}
fun comidas() : String {
    val a = arrayOf("Milanesas","Pizza","Pescado","Pollo","Carne Asada","Tarta","Empanadas")
    val b = a[Random().nextInt(a.size)]
    return b
}
fun menuDelDia(){
    val dia = dias()
    val comida = comidas()
    println("El menu del d√≠a $dia es $comida")
}
fun main() {
    menuDelDia()
}
